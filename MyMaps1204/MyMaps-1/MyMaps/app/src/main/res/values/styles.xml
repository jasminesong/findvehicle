        <item name="colorPrimaryDark">@color/fbutton_color_carrot</item>
        <item name="colorAccent">@color/fbutton_color_amethyst</item>
    </style>

    <style name="QText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/fbutton_color_sun_flower</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:typeface">monospace</item>
        <item name="android:shadowColor">@color/fbutton_color_asbestos</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:shadowDx">3</item>
